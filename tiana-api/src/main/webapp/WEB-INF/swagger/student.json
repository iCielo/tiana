                    "required": true
                }
            ],
            "get": {
                "summary": "根据ID主键获取学生",
                "responses": {
                    "200": {
                        "description": "返回结果",
                        "schema": {
                            "$ref": "#/definitions/StudentSimpleData"
                        }
                    }
                }
            },
            "delete": {
                "summary": "根据ID主键删除学生",
