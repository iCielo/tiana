                },
                "msg": {
                    "type": "string",
                    "description": "消息"
                },
                "result": {
                    "$ref": "#/definitions/Student"
                }
            }
        },
        "StudentList": {
            "type": "object",
            "properties": {
                "code": {
                    "type": "string",
                    "description": "代码"
                },
                "msg": {
                    "type": "string",
                    "description": "消息"
                },
                "result": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/Student"
                    }
                }
            }
        },
        "BaseData": {
            "type": "object",
            "properties": {
                "code": {
